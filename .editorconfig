# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,json,css,sass}]
indent_size = 2

[*.md]
remove_trailing_whitespace = false

[*.svg]
insert_final_newline = false
